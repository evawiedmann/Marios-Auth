<!DOCTYPE html>
<html>
  <head>
    <title>MariosAuth</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <% if current_user %>
      <p id="user-email"><%= current_user.email %></p>
      <p id="sign-out"><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></p>
      <% else %>
      <p id="sign-up"><%= link_to "Sign Up", new_user_registration_path %></p>
      <p id="sign-in"><%= link_to "Sign In", new_user_session_path %></p>
      <% end %>
      <%= flash[:alert] %>
      <%= flash[:notice] %>

  <%= flash[:alert] %>
  <%= flash[:notice] %>

  <p> <%= link_to "Home", root_path %> </p>

  <%= yield %>
</body>
</html>
